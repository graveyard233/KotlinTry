<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="vm"
            type="com.example.kotlintry.ui.state.RepositoryState" />

        <variable
            name="click"
            type="com.example.kotlintry.ui.pages.RepositoryFragment.ClickProxy" />

        <variable
            name="rep1"
            type="com.example.kotlintry.viewModel.FirstViewModel" />
        <variable
            name="rep2"
            type="com.example.kotlintry.viewModel.SecondViewModel" />
        <variable
            name="rep3"
            type="com.example.kotlintry.viewModel.ThirdViewModel" />
        <variable
            name="rep4"
            type="com.example.kotlintry.viewModel.FourthViewModel" />
        <variable
            name="rep5"
            type="com.example.kotlintry.viewModel.FifthViewModel" />
        <variable
            name="rep6"
            type="com.example.kotlintry.viewModel.SixthViewModel" />


    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <TextView
                android:id="@+id/repository_text"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/repository_btn_1"
                android:text="useRep1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:onClick="@{()->click.useRep1()}"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>

            <Button
                android:id="@+id/repository_btn_2"
                android:text="useRep2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:onClick="@{()->click.useRep2()}"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>

            <Button
                android:id="@+id/repository_btn_3"
                android:text="useRep3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:onClick="@{()->click.useRep3()}"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/repository_btn_4"
                android:text="useRep4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:onClick="@{()->click.useRep4()}"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>

            <Button
                android:id="@+id/repository_btn_5"
                android:text="useRep5"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:onClick="@{()->click.useRep5()}"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>

            <Button
                android:id="@+id/repository_btn_6"
                android:text="useRep6"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:onClick="@{()->click.useRep6()}"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>
        </LinearLayout>



    </LinearLayout>
</layout>